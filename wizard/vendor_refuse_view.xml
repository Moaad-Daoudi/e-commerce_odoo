<odoo>
    <record id="view_vendor_refuse_form" model="ir.ui.view">
        <field name="name">marketplace.vendor.refuse.form</field>
        <field name="model">marketplace.vendor.refuse</field>
        <field name="arch" type="xml">
            <form string="Refuser le vendeur">
                <group>
                    <field name="reason" placeholder="Expliquez pourquoi ce vendeur est refusÃ©..."/>
                </group>
                <footer>
                    <button name="action_refuse_reason" string="Confirmer le Refus" type="object" class="btn-danger"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour appeler le wizard -->
    <record id="action_vendor_refuse" model="ir.actions.act_window">
        <field name="name">Refuser Vendeur</field>
        <field name="res_model">marketplace.vendor.refuse</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> <!-- Ouvre en pop-up -->
    </record>
</odoo>