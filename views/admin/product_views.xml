<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Template Inherit Form -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add Approval Buttons in Header -->
            <xpath expr="//header" position="inside">
                <button name="action_approve_product" 
                        string="Approve" 
                        type="object" 
                        class="oe_highlight"
                        invisible="approval_state != 'pending'"
                        groups="marketplace_platform.group_marketplace_manager"/>
                <button name="action_reject_product" 
                        string="Reject" 
                        type="object"
                        invisible="approval_state != 'pending'"
                        groups="marketplace_platform.group_marketplace_manager"/>
                <field name="approval_state" widget="statusbar" 
                       statusbar_visible="draft,pending,approved"
                       invisible="vendor_id == False"/>
            </xpath>
            
            <xpath expr="//group[@name='group_general']" position="after">
                <group string="Marketplace Information" name="marketplace_info" invisible="vendor_id == False">
                    <field name="vendor_id"/>
                    <field name="commission_rate"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vendor Products Action -->
    <record id="action_vendor_products" model="ir.actions.act_window">
        <field name="name">Vendor Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('vendor_id', '!=', False)]</field>
        <field name="context">{'search_default_vendor_id': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendor products yet!
            </p>
            <p>
                Products from vendors will appear here.
            </p>
        </field>
    </record>

    <!-- Pending Products Action (For Admin Approval) -->
    <record id="action_pending_products" model="ir.actions.act_window">
        <field name="name">Pending Approval</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('vendor_id', '!=', False), ('approval_state', '=', 'pending')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No products waiting for approval!
            </p>
        </field>
    </record>

</odoo>
