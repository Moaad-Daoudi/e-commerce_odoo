<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Commission Tree View -->
    <record id="view_commission_tree" model="ir.ui.view">
        <field name="name">marketplace.commission.list</field>
        <field name="model">marketplace.commission</field>
        <field name="arch" type="xml">
            <list string="Commissions">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="order_line_id"/>
                <field name="amount_commission" sum="Total Commission"/>
                <field name="amount_vendor" sum="Total Vendor Amount"/>
                <field name="state" decoration-info="state == 'draft'" 
                       decoration-warning="state == 'confirmed'"
                       decoration-success="state == 'paid'"
                       decoration-muted="state == 'cancel'" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Commission Form View -->
    <record id="view_commission_form" model="ir.ui.view">
        <field name="name">marketplace.commission.form</field>
        <field name="model">marketplace.commission</field>
        <field name="arch" type="xml">
            <form string="Commission">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="order_line_id"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_commission"/>
                            <field name="amount_vendor"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Commission Action -->
    <record id="action_commission" model="ir.actions.act_window">
        <field name="name">Commissions</field>
        <field name="res_model">marketplace.commission</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No commissions calculated yet!
            </p>
            <p>
                Commissions will be calculated automatically from vendor sales.
            </p>
        </field>
    </record>

    <!-- Payout Tree View -->
    <record id="view_payout_tree" model="ir.ui.view">
        <field name="name">marketplace.payout.list</field>
        <field name="model">marketplace.payout</field>
        <field name="arch" type="xml">
            <list string="Payouts">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="request_date"/>
                <field name="amount"/>
                <field name="state" decoration-info="state == 'draft'" 
                       decoration-warning="state == 'requested'" 
                       decoration-success="state == 'paid'" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Payout Form View -->
    <record id="view_payout_form" model="ir.ui.view">
        <field name="name">marketplace.payout.form</field>
        <field name="model">marketplace.payout</field>
        <field name="arch" type="xml">
            <form string="Payout">
                <header>
                    <button name="action_request" string="Request Payout" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,validated,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="request_date"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount"/>
                            <field name="payment_date" invisible="state != 'paid'"/>
                            <field name="payment_reference"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payout Action -->
    <record id="action_payout" model="ir.actions.act_window">
        <field name="name">Payouts</field>
        <field name="res_model">marketplace.payout</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payout requests yet!
            </p>
            <p>
                Vendors can request payouts here.
            </p>
        </field>
    </record>

</odoo>
