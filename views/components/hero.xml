                        <h6 class="fw-bold mb-3">Shop by Vibe</h6>
                        <div class="d-flex flex-wrap gap-3">
                            <!-- Loop through categories passed from controller -->
                            <t t-foreach="categories" t-as="cat">
                                <a t-att-href="'/shop/category/%s' % slug(cat)" class="aura-cat-pill d-flex align-items-center gap-2 text-decoration-none">
                                    <div class="cat-icon-circle">
                                        <!-- If you have icons on categories, use them, else generic -->
                                        <i class="fa fa-gift"/> 
