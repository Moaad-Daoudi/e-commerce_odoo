<odoo>
    <template id="navbar_component" name="Aura Navbar Component">
        <!-- Main Navbar Container -->
        <nav class="navbar navbar-expand-lg aura-navbar w-100">
            <div class="container-fluid px-4">
                
                <!-- 1. LOGO -->
                <a href="/" class="navbar-brand aura-logo-container d-flex align-items-center gap-2 me-5">
                    <img src="/marketplace_platform/static/src/img/logo_icon.png" class="aura-logo" alt="Logo"/>
                </a>

                <!-- 2. MENU LINKS -->
                <div class="d-flex align-items-center me-auto">
                    <a href="/" class="aura-nav-link">Home</a>
                    <a href="/categories" class="aura-nav-link">Categories</a>
                    <a href="/about" class="aura-nav-link">About</a>
                    <a href="/contactus" class="aura-nav-link">Contact</a>
                </div>

                <!-- 3. SEARCH BAR -->
                <div class="flex-grow-1 d-none d-md-flex justify-content-center mx-4">
                    <form action="/search" method="get" class="aura-search-container">
                        <i class="fa fa-microphone text-muted ms-2"/>
                        <input type="text" name="search" class="aura-search-input" placeholder="Search for unique finds..."/>
                        <button type="submit" class="btn btn-link p-0 text-muted">
                            <i class="fa fa-search fs-5"/>
                        </button>
                    </form>
                </div>

                <!-- 4. RIGHT SIDE ACTIONS -->
                <div class="d-flex align-items-center">
                    
                    <a href="/wishlist" class="aura-icon-btn text-decoration-none" title="Wishlist">
                        <i class="fa fa-heart-o"/>
                    </a>
                    
                    <!-- Cart Icon -->
                    <a href="/cart" class="position-relative ms-4 text-dark">
                        <i class="fa fa-shopping-cart fa-lg" style="font-size: 24px;"/>
                        <t t-set="website_sale_order" t-value="request.website.sale_get_order()"/>
                        <t t-if="website_sale_order and website_sale_order.cart_quantity > 0">
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill aura-badge">
                                <t t-esc="website_sale_order.cart_quantity"/>
                            </span>
                        </t>
                    </a>
                    
                    <!-- Auth Buttons (Guest) -->
                    <t t-if="user_id._is_public()">
                        <a href="/login" class="btn btn-aura-signin ms-3">Sign in</a>
                        <a href="/signup" class="btn btn-aura-join">Join</a>
                    </t>
                    
                    <!-- User Dropdown (Logged In) -->
                    <t t-else="">
                        <div class="dropdown ms-3">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <img t-att-src="image_data_uri(user_id.avatar_128)" width="38" height="38" class="rounded-circle border border-white shadow-sm"/>
                            </a>
                            
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 p-2 rounded-4" aria-labelledby="dropdownUser1">
                                <li><h6 class="dropdown-header text-muted">Hi, <t t-esc="user_id.name"/></h6></li>
                                
                                <!-- Common Link -->
                                <li>
                                    <a class="dropdown-item rounded-3 py-2" href="/my/account">
                                        <i class="fa fa-user-circle-o me-2 text-primary"/> My Account
                                    </a>
                                </li>

                                <!-- LOGIC: Only show Vendor Dashboard if user is a Vendor -->
                                <t t-if="user_id.has_group('marketplace_platform.group_marketplace_vendor')">
                                    <li>
                                        <a class="dropdown-item rounded-3 py-2" href="/my/marketplace">
                                            <i class="fa fa-tachometer me-2 text-success"/> Vendor Dashboard
                                        </a>
                                    </li>
                                </t>
                                <!-- LOGIC: Show 'Become a Seller' if user is NOT a Vendor -->
                                <t t-else="">
                                    <li>
                                        <a class="dropdown-item rounded-3 py-2" href="/marketplace/register">
                                            <i class="fa fa-rocket me-2 text-warning"/> Become a Seller
                                        </a>
                                    </li>
                                </t>

                                <li><hr class="dropdown-divider"/></li>
                                
                                <li>
                                    <a class="dropdown-item rounded-3 py-2 text-danger" href="/web/session/logout?redirect=/">
                                        <i class="fa fa-sign-out me-2"/> Log out
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </t>


                </div>
            </div>
        </nav>
    </template>
</odoo>