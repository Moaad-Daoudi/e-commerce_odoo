<odoo>
    <template id="about_us_page" name="Our Story">
        <t t-call="marketplace_platform.minimal_layout">
            <div id="wrap" class="o_aura_about">
                <t t-call="marketplace_platform.navbar_component"/>
				
                <!-- 1. HERO SECTION -->
                <section class="position-relative py-5 bg-light overflow-hidden">
                    <div class="container py-5">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-5 mb-lg-0">
                                <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 mb-3">Our Mission</span>
                                <h1 class="display-4 fw-bold mb-4">Empowering Creators <br/>Worldwide.</h1>
                                <p class="lead text-muted mb-4">
                                    We believe that commerce should be human. We built this platform to connect unique artisans with people who value craftsmanship over mass production.
                                </p>
                            </div>
                            <div class="col-lg-6">
                                <!-- Placeholder Image -->
                                <div class="position-relative">
                                    <div class="bg-primary position-absolute top-0 end-0 w-100 h-100 rounded-4" style="transform: translate(20px, 20px); opacity: 0.1;"></div>
                                    <img src="/web/static/img/feedback.png" class="img-fluid rounded-4 shadow-lg position-relative" alt="Our Team"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- 2. STATS SECTION -->
                <section class="py-5 bg-white border-bottom">
                    <div class="container">
                        <div class="row text-center">
                            <div class="col-md-4 mb-4 mb-md-0">
                                <h2 class="display-5 fw-bold text-primary">50k+</h2>
                                <p class="text-muted">Active Products</p>
                            </div>
                            <div class="col-md-4 mb-4 mb-md-0">
                                <h2 class="display-5 fw-bold text-primary">120+</h2>
                                <p class="text-muted">Countries Served</p>
                            </div>
                            <div class="col-md-4">
                                <h2 class="display-5 fw-bold text-primary">10k+</h2>
                                <p class="text-muted">Independent Makers</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- 3. OUR VALUES -->
                <section class="py-5 bg-light">
                    <div class="container py-5">
                        <div class="text-center mb-5">
                            <h2 class="fw-bold">Why We Do It</h2>
                            <p class="text-muted">The core values that drive our marketplace.</p>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm p-4">
                                    <div class="mb-3 text-primary"><i class="fa fa-users fa-2x"></i></div>
                                    <h4>Community First</h4>
                                    <p class="text-muted">We prioritize the success of our vendors and the satisfaction of our customers above all else.</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm p-4">
                                    <div class="mb-3 text-primary"><i class="fa fa-leaf fa-2x"></i></div>
                                    <h4>Sustainability</h4>
                                    <p class="text-muted">We encourage eco-friendly practices and carbon-neutral shipping options for a greener future.</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm p-4">
                                    <div class="mb-3 text-primary"><i class="fa fa-shield fa-2x"></i></div>
                                    <h4>Trust &amp; Safety</h4>
                                    <p class="text-muted">Every transaction is secured, and every vendor is vetted to ensure a safe marketplace environment.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- 4. CTA -->
                <section class="py-5 bg-dark text-white">
                    <div class="container text-center py-4">
                        <h2 class="mb-3">Ready to join the movement?</h2>
                        <p class="mb-4 text-white-50">Start selling your unique products today.</p>
                        <a href="/marketplace/register" class="btn btn-primary btn-lg rounded-pill px-5">Become a Vendor</a>
                    </div>
                </section>
			<t t-call="marketplace_platform.footer_component"/>
            </div>
        </t>
    </template>
</odoo>