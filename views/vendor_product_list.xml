<odoo>
    <template id="vendor_product_list" name="Vendor Products">
        <t t-call="marketplace_platform.minimal_layout">
            <div id="wrap" class="bg-light-cream" style="min-height: 100vh;">
                
                <!-- Navbar Includes -->
                <t t-call="marketplace_platform.navbar_component"/>
                <t t-call="marketplace_platform.vendor_navbar_component"/>
                
                <div class="container py-5">
                    
                    <!-- Success Message -->
                    <t t-if="request.params.get('success') == 'pending'">
                        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                            <i class="fa fa-clock-o me-2"/>
                            <strong>Product submitted!</strong> Your product is now pending admin approval. You'll be notified once it's approved and live on the site.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"/>
                        </div>
                    </t>
                    
                    <!-- Page Header -->
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
                        <div>
                            <h2 class="fw-bold text-dark mb-1">Products</h2>
                            <p class="text-muted mb-0">Manage your catalog</p>
                        </div>
                        
                        <div class="d-flex gap-3">
                            <!-- Search Bar -->
                            <form class="search-input-group" method="get">
                                <i class="fa fa-search text-muted"/>
                                <input type="text" name="search" placeholder="Search products..." t-att-value="search"/>
                                <button type="submit" class="btn btn-sm btn-light">Go</button>
                            </form>
                            
                            <!-- Add Product Button -->
                            <a href="/my/marketplace/products/add" class="btn btn-aura-primary rounded-pill px-4 d-flex align-items-center gap-2">
                                <i class="fa fa-plus"/> <span>Add Product</span>
                            </a>
                        </div>
                    </div>

                    <!-- Filter / Sort Toolbar (Optional) -->
                    <div class="d-flex justify-content-end mb-3 gap-2">
                        <div class="dropdown">
                            <button class="btn btn-white border rounded-pill btn-sm dropdown-toggle px-3" type="button" data-bs-toggle="dropdown">
                                <i class="fa fa-sort-amount-desc me-1"/> Sort by
                            </button>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li><a class="dropdown-item" href="?sortby=newest">Newest First</a></li>
                                <li><a class="dropdown-item" href="?sortby=price">Price: High to Low</a></li>
                                <li><a class="dropdown-item" href="?sortby=name">Name: A-Z</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Product Table -->
                    <div class="vendor-table-card">
                        <div class="table-responsive">
                            <table class="vendor-table">
                                <thead>
                                    <tr>
                                        <th style="width: 80px;">Image</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="products" t-as="p">
                                        <tr>
                                            <!-- Image -->
                                            <td>
                                                <img t-att-src="website.image_url(p, 'image_128')" class="vendor-product-thumb" alt="Product"/>
                                            </td>
                                            
                                            <!-- Name & Ref -->
                                            <td>
                                                <div class="fw-bold text-dark"><t t-esc="p.name"/></div>
                                                <div class="text-muted small" t-if="p.default_code">SKU: <t t-esc="p.default_code"/></div>
                                            </td>
                                            
                                            <!-- Price -->
                                            <td class="fw-bold text-dark">
                                                <span t-field="p.list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            </td>
                                            
                                            <!-- Stock Level -->
                                            <td>
                                                <t t-if="p.qty_available > 10">
                                                    <span class="text-success fw-bold"><t t-esc="p.qty_available"/> in stock</span>
                                                </t>
                                                <t t-elif="p.qty_available > 0">
                                                    <span class="text-warning fw-bold">Low stock (<t t-esc="p.qty_available"/>)</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="text-danger fw-bold">Out of stock</span>
                                                </t>
                                            </td>
                                            
                                            <!-- Status -->
                                            <td>
                                                <t t-if="p.is_published and p.approval_state == 'approved'">
                                                    <span class="v-badge published">Active</span>
                                                </t>
                                                <t t-elif="p.approval_state == 'pending'">
                                                    <span class="v-badge pending">Pending</span>
                                                </t>
                                                <t t-elif="p.approval_state == 'rejected'">
                                                    <span class="v-badge rejected">Rejected</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="v-badge draft">Draft</span>
                                                </t>
                                            </td>
                                            
                                            <!-- Actions -->
                                            <td class="text-end">
                                                <div class="d-flex justify-content-end gap-1">
                                                    <a t-attf-href="/my/marketplace/product/edit/#{p.id}" class="action-btn" title="Edit">
                                                        <i class="fa fa-pencil"/>
                                                    </a>
                                                    <a t-attf-href="/my/marketplace/product/duplicate/#{p.id}" class="action-btn" title="Duplicate">
                                                        <i class="fa fa-copy"/>
                                                    </a>
                                                    <a t-attf-href="/my/marketplace/product/delete/#{p.id}" class="action-btn text-danger" 
                                                       title="Delete" onclick="return confirm('Are you sure you want to delete this product?');">
                                                        <i class="fa fa-trash"/>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                    
                                    <!-- Empty State -->
                                    <tr t-if="not products">
                                        <td colspan="6" class="text-center py-5">
                                            <div class="d-flex flex-column align-items-center">
                                                <div class="bg-light rounded-circle p-4 mb-3">
                                                    <i class="fa fa-box-open fa-3x text-muted"/>
                                                </div>
                                                <h5 class="text-muted">No products found</h5>
                                                <a href="/my/marketplace/products/add" class="btn btn-link text-aura-primary">Create your first product</a>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        <div class="p-3 border-top" t-if="pager['page_count'] > 1">
                            <t t-call="website.pager"/>
                        </div>
                    </div>

                </div>
                
                <t t-call="marketplace_platform.footer_component"/>
            </div>
        </t>
    </template>
</odoo>