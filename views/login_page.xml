<odoo>
    <!-- LOGIN PAGE TEMPLATE -->
    <template id="login_page" name="Aura Login">
        <t t-call="marketplace_platform.minimal_layout">
            <div id="wrap" class="bg-light-cream">
                <t t-call="marketplace_platform.navbar_component"/>
                
                <div class="aura-auth-container">
                    <div class="aura-auth-card">
                        
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-dark">Welcome back</h2>
                            <p class="text-muted">Please enter your details to sign in.</p>
                        </div>

                        <!-- Error Message (if any) -->
                        <p t-if="error" class="alert alert-danger py-2 small text-center rounded-3">
                            <t t-esc="error"/>
                        </p>

                        <!-- Form submitting to standard Odoo Login -->
                        <form class="role" method="post" action="/web/login">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>

                            <!-- Email -->
                            <div class="mb-3">
                                <label for="login" class="aura-form-label">Email address</label>
                                <input type="email" name="login" t-att-value="login" id="login" 
                                       class="form-control aura-form-control" required="required" autofocus="autofocus"
                                       placeholder="Enter your email"/>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label for="password" class="aura-form-label">Password</label>
                                <input type="password" name="password" id="password" 
                                       class="form-control aura-form-control" required="required" 
                                       placeholder="••••••••"/>
                            </div>

                            <!-- Remember Me & Forgot Password -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remember"/>
                                    <label class="form-check-label small text-muted" for="remember">Remember me</label>
                                </div>
                                <a href="/web/reset_password" class="small text-aura-primary text-decoration-none fw-bold">Forgot password?</a>
                            </div>

                            <!-- Submit -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-aura-primary rounded-pill py-2 shadow-sm">Sign in</button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="divider-text">OR CONTINUE WITH</div>

                        <!-- Social Buttons (Visual only, functional if Auth OAuth installed) -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-social d-flex align-items-center justify-content-center gap-2">
                                <i class="fa fa-google text-danger"/> Sign in with Google
                            </button>
                        </div>

                        <!-- Footer Link -->
                        <div class="text-center mt-4">
                            <span class="text-muted small">Don't have an account? </span>
                            <a href="/signup" class="text-aura-primary fw-bold small text-decoration-none">Sign up</a>
                        </div>
                    </div>
                </div>

                <t t-call="marketplace_platform.footer_component"/>
            </div>
        </t>
    </template>

</odoo>