<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vendor Form View -->
    <record id="view_vendor_form" model="ir.ui.view">
        <field name="name">marketplace.vendor.form</field>
        <field name="model">marketplace.vendor</field>
        <field name="arch" type="xml">
            <form string="Vendor">
                <header>
                    <button name="action_approve_vendor" string="Approve" type="object" 
                            class="oe_highlight" invisible="state != 'pending'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,pending,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="shop_name" class="oe_edit_only"/>
                        <h1><field name="shop_name" placeholder="Shop Name"/></h1>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="partner_id"/>
                            <field name="shop_url"/>
                        </group>
                        <group string="Business Information">
                            <field name="default_commission_rate"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="balance"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="list_price"/>
                                    <field name="approval_state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Commissions">
                            <field name="commission_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="order_line_id"/>
                                    <field name="amount_commission"/>
                                    <field name="amount_vendor"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vendor Tree View -->
    <record id="view_vendor_tree" model="ir.ui.view">
        <field name="name">marketplace.vendor.tree</field>
        <field name="model">marketplace.vendor</field>
        <field name="arch" type="xml">
            <tree string="Vendors">
                <field name="shop_name"/>
                <field name="partner_id"/>
                <field name="shop_url"/>
                <field name="default_commission_rate"/>
                <field name="balance" sum="Total Balance"/>
                <field name="state" decoration-info="state == 'new'" 
                       decoration-warning="state == 'pending'" 
                       decoration-success="state == 'active'" 
                       decoration-danger="state == 'suspended'" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Vendor Kanban View -->
    <record id="view_vendor_kanban" model="ir.ui.view">
        <field name="name">marketplace.vendor.kanban</field>
        <field name="model">marketplace.vendor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="shop_name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="balance"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="shop_name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li><field name="partner_id"/></li>
                                    <li>Balance: <field name="balance" widget="monetary"/></li>
                                </ul>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {'new': 'default', 'pending': 'warning', 'active': 'success', 'suspended': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vendor Search View -->
    <record id="view_vendor_search" model="ir.ui.view">
        <field name="name">marketplace.vendor.search</field>
        <field name="model">marketplace.vendor</field>
        <field name="arch" type="xml">
            <search string="Search Vendors">
                <field name="shop_name"/>
                <field name="partner_id"/>
                <field name="shop_url"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vendor Action -->
    <record id="action_vendor" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">marketplace.vendor</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor!
            </p>
            <p>
                Register and manage vendors who will sell products on your marketplace.
            </p>
        </field>
    </record>

</odoo>
