<odoo>
    <template id="placeholder_category_page" name="Category Page">
        <t t-call="marketplace_platform.minimal_layout">
            <div id="wrap" class="bg-light-cream">
                <t t-call="marketplace_platform.navbar_component"/>
                
                <!-- Category Banner Section with Main Image -->
                <div class="category-banner position-relative" style="height: 300px; overflow: hidden;">
                    <img t-attf-src="/web/image/product.public.category/{{category.id}}/image_1920" 
                         class="w-100 h-100" 
                         style="object-fit: cover; filter: brightness(0.7);"
                         alt="Category Banner"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"/>
                    <div class="w-100 h-100 bg-primary bg-opacity-10" style="display: none;"></div>
                    
                    <!-- Category Info Overlay -->
                    <div class="position-absolute top-50 start-50 translate-middle text-center text-white w-100">
                        <div class="container">
                            <div class="d-flex justify-content-center align-items-center mb-3">
                                <img t-attf-src="/web/image/product.public.category/{{category.id}}/category_logo" 
                                     class="rounded-circle bg-white p-3 shadow" 
                                     style="width: 100px; height: 100px; object-fit: contain;"
                                     alt="Category Logo"
                                     onerror="this.style.display='none'"/>
                            </div>
                            <h1 class="fw-bold display-4 text-white" t-field="category.name"/>
                            <p class="lead text-white mb-0" t-if="category.seo_description" t-field="category.seo_description"/>
                            <nav aria-label="breadcrumb" class="mt-3">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><a href="/" class="text-white">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/categories" class="text-white">Shop</a></li>
                                    <li class="breadcrumb-item active text-white" aria-current="page"><span t-esc="category.name"/></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- 2. MAIN CONTENT ROW -->
                <div class="container pb-5 pt-5" id="products-grid">
                    <div class="row mt-4">
                        
                        <!-- LEFT SIDEBAR: FILTERS -->
                        <div class="col-lg-3 mb-5">
                            <div class="aura-sidebar p-4 bg-white shadow-sm rounded-4 sticky-top" style="top: 100px; z-index: 90;">
                                <div class="d-flex align-items-center gap-2 mb-4">
                                    <i class="fa fa-sliders text-primary"/>
                                    <h5 class="fw-bold m-0">Filters</h5>
                                </div>

                                <!-- Filter Form -->
                                <form t-attf-action="/category/{{slug(category)}}" method="get">
                                    
                                    <!-- Search by Product Name -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-search"/> Search Products
                                        </h6>
                                        <div class="input-group input-group-sm">
                                            <input type="text" name="search" class="form-control" 
                                                   placeholder="Search by name..." 
                                                   t-att-value="filters.get('search', '')"/>
                                            <button class="btn btn-outline-secondary" type="submit">
                                                <i class="fa fa-search"/>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Sort By -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-sort-amount-asc"/> Sort By
                                        </h6>
                                        <select name="sort" class="form-select form-select-sm">
                                            <option value="">Default</option>
                                            <option value="price_asc" t-att-selected="'selected' if filters.get('sort') == 'price_asc' else None">Price: Low to High</option>
                                            <option value="price_desc" t-att-selected="'selected' if filters.get('sort') == 'price_desc' else None">Price: High to Low</option>
                                            <option value="name_asc" t-att-selected="'selected' if filters.get('sort') == 'name_asc' else None">Name: A to Z</option>
                                            <option value="newest" t-att-selected="'selected' if filters.get('sort') == 'newest' else None">Newest First</option>
                                            <option value="popular" t-att-selected="'selected' if filters.get('sort') == 'popular' else None">Most Popular</option>
                                        </select>
                                    </div>

                                    <!-- Price Filter -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-dollar"/> Price Range
                                        </h6>
                                        <div class="input-group input-group-sm mb-2">
                                            <span class="input-group-text">$</span>
                                            <input type="number" name="min_price" class="form-control" placeholder="0" t-att-value="filters.get('min_price', '')"/>
                                            <span class="input-group-text">-</span>
                                            <input type="number" name="max_price" class="form-control" placeholder="Max" t-att-value="filters.get('max_price', '')"/>
                                        </div>
                                        <!-- Quick Price Ranges -->
                                        <div class="d-flex flex-wrap gap-1 mt-2">
                                            <button type="submit" name="min_price" value="0" onclick="document.getElementsByName('max_price')[0].value='50'" class="badge bg-light text-dark text-decoration-none border-0">Under $50</button>
                                            <button type="submit" name="min_price" value="50" onclick="document.getElementsByName('max_price')[0].value='100'" class="badge bg-light text-dark text-decoration-none border-0">$50 - $100</button>
                                            <button type="submit" name="min_price" value="100" onclick="document.getElementsByName('max_price')[0].value='200'" class="badge bg-light text-dark text-decoration-none border-0">$100 - $200</button>
                                            <button type="submit" name="min_price" value="200" onclick="document.getElementsByName('max_price')[0].value=''" class="badge bg-light text-dark text-decoration-none border-0">$200+</button>
                                        </div>
                                    </div>

                                    <!-- Availability Filter -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-check-circle"/> Availability
                                        </h6>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="in_stock" value="1" 
                                                   t-att-checked="'checked' if filters.get('in_stock') else None" id="in_stock"/>
                                            <label class="form-check-label small" for="in_stock">
                                                In Stock Only
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="on_sale" value="1" 
                                                   t-att-checked="'checked' if filters.get('on_sale') else None" id="on_sale"/>
                                            <label class="form-check-label small" for="on_sale">
                                                On Sale
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Vendor Filter -->
                                    <div class="mb-4" t-if="vendors">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-store"/> Makers (Vendors)
                                        </h6>
                                        <div class="aura-filter-scroll" style="max-height: 200px; overflow-y: auto;">
                                            <div class="d-flex flex-column gap-2">
                                                <t t-foreach="vendors" t-as="v">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="vendor" 
                                                               t-att-value="v.id" t-att-id="'v_%s' % v.id"
                                                               t-att-checked="'checked' if filters.get('vendor') and v.id in filters.get('vendor', []) else None"/>
                                                        <label class="form-check-label small" t-att-for="'v_%s' % v.id">
                                                            <t t-esc="v.shop_name"/>
                                                        </label>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Rating Filter -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-star"/> Customer Rating
                                        </h6>
                                        <div class="d-flex flex-column gap-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="rating" value="4" id="rating4"
                                                       t-att-checked="'checked' if filters.get('rating') == '4' else None"/>
                                                <label class="form-check-label small" for="rating4">
                                                    <i class="fa fa-star text-warning"/>
                                                    <i class="fa fa-star text-warning"/>
                                                    <i class="fa fa-star text-warning"/>
                                                    <i class="fa fa-star text-warning"/> &amp; Up
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="rating" value="3" id="rating3"
                                                       t-att-checked="'checked' if filters.get('rating') == '3' else None"/>
                                                <label class="form-check-label small" for="rating3">
                                                    <i class="fa fa-star text-warning"/>
                                                    <i class="fa fa-star text-warning"/>
                                                    <i class="fa fa-star text-warning"/> &amp; Up
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Condition Filter -->
                                    <div class="mb-4">
                                        <h6 class="fw-bold small text-uppercase text-muted mb-3">
                                            <i class="fa fa-tags"/> Condition
                                        </h6>
                                        <div class="d-flex flex-column gap-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="condition" value="new" id="condition_new"
                                                       t-att-checked="'checked' if filters.get('condition') == 'new' else None"/>
                                                <label class="form-check-label small" for="condition_new">
                                                    New
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="condition" value="used" id="condition_used"
                                                       t-att-checked="'checked' if filters.get('condition') == 'used' else None"/>
                                                <label class="form-check-label small" for="condition_used">
                                                    Used/Refurbished
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit & Clear Buttons -->
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-sm rounded-pill">
                                            <i class="fa fa-filter"/> Apply Filters
                                        </button>
                                        <a t-att-href="'/category/%s' % slug(category)" class="btn btn-light btn-sm rounded-pill text-muted">
                                            <i class="fa fa-times"/> Clear All
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- RIGHT COLUMN: PRODUCT GRID -->
                        <div class="col-lg-9">
                            
                            <!-- Sort/Count Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="text-muted small"><strong class="text-dark"><t t-esc="len(products) if products else 0"/></strong> Products found</span>
                            </div>

                            <!-- Products Grid -->
                            <div class="row g-4">
                                <t t-if="products" t-foreach="products" t-as="product">
                                    <div class="col-lg-4 col-md-6 mb-4">
                                        <a t-attf-href="/product/#{product.id}" class="text-decoration-none">
                                            <div class="card h-100 aura-product-card border-0 shadow-sm bg-white">
                                                <div class="product-img-box position-relative overflow-hidden" style="height: 220px; background: #f3f4f6;">
                                                    <t t-if="product.image_1920">
                                                        <img t-att-src="image_data_uri(product.image_1920)" class="card-img-top w-100 h-100 object-fit-cover" t-att-alt="product.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        <div class="d-flex align-items-center justify-content-center h-100">
                                                            <i class="fa fa-image fa-3x text-muted"/>
                                                        </div>
                                                    </t>
                                                    <!-- Wishlist Button -->
                                                    <a t-attf-href="/wishlist/add/#{product.id}" class="btn-wish-float" title="Save for Later" onclick="event.stopPropagation();">
                                                        <i class="fa fa-heart-o"/>
                                                    </a>
                                                </div>
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <div class="flex-grow-1">
                                                            <h6 class="fw-bold text-dark mb-1" t-esc="product.name"/>
                                                            <p class="small text-muted mb-0" t-if="product.vendor_id">by <t t-esc="product.vendor_id.shop_name"/></p>
                                                        </div>
                                                        <div class="text-end ms-2">
                                                            <span class="fw-bold fs-6 text-aura-orange">
                                                                $<t t-esc="'%.2f' % product.list_price"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                                
                                <!-- Empty State -->
                                <t t-if="not products">
                                    <div class="col-12 text-center py-5">
                                        <div class="bg-white p-5 rounded-4 shadow-sm">
                                            <i class="fa fa-folder-open-o fa-3x text-muted mb-3"/>
                                            <h4>No products found</h4>
                                            <p class="text-muted">Try adjusting your filters.</p>
                                        </div>
                                    </div>
                                </t>
                            </div>

                            <!-- PAGINATION -->
                            <t t-call="marketplace_platform.pagination_component">
                                <t t-set="pager" t-value="pager"/>
                                <t t-set="base_url" t-value="'/category/%s/page' % slug(category)"/>
                                <t t-set="url_params" t-value="'?%s' % pager.get('keep_query', '') if pager.get('keep_query') else ''"/>
                            </t>

                        </div>
                    </div>
                </div>

                <t t-call="marketplace_platform.footer_component"/>
            </div>
        </t>
    </template>
</odoo>