<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rule to allow all users to read vendors -->
        <record id="marketplace_vendor_read_all" model="ir.rule">
            <field name="name">Marketplace Vendor: All users can read</field>
            <field name="model_id" ref="model_marketplace_vendor"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="global" eval="True"/>
        </record>
    </data>
</odoo>
