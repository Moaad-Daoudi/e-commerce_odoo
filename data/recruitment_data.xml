<odoo>
    <data noupdate="1">
        
        <!-- Département R&D -->
        <record id="dep_rd" model="hr.department">
            <field name="name">Engineering</field>
        </record>

        <!-- Poste 1: Python Dev -->
        <record id="job_developer" model="hr.job">
            <field name="name">Senior Python Developer</field>
            <field name="department_id" ref="dep_rd"/>
            <field name="no_of_recruitment">2</field>
            <field name="description">We are looking for a backend wizard to scale our marketplace.</field>
            <!-- Nécessite le module website_hr_recruitment pour être publié -->
            <field name="website_published">True</field> 
        </record>

        <!-- Poste 2: Operations Manager -->
        <record id="job_manager" model="hr.job">
            <field name="name">Marketplace Manager</field>
            <field name="no_of_recruitment">1</field>
            <field name="description">Manage vendor relationships and daily operations.</field>
            <field name="website_published">True</field>
        </record>

        <!-- Poste 3: Support -->
        <record id="job_support" model="hr.job">
            <field name="name">Customer Success Specialist</field>
            <field name="no_of_recruitment">3</field>
            <field name="description">Help our customers and vendors succeed.</field>
            <field name="website_published">True</field>
        </record>

    </data>
</odoo>